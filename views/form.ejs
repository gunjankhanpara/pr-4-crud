<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<body>
    <section>
        <div class="container">
            <div class="row">
                <h2 style="text-align: center; color: brown;">
                    Book reading crud
                </h2>
            </div>
            <div class="row">
                <form action="/insertdata" method="post" enctype="multipart/form-data">
                    <table  style="color: brown;">
                        <tr>
                            <td>
                                <input type="hidden" name="id" value="<%= user.id%>">
                            </td>
                        </tr>
                        <tr>
                            <td class="mb-2">
                               book name :-
                            </td>
                            <td>
                                <input type="text" placeholder="enter the book name" class="mb-2" name="name" value="<%=user.name%>"><br>
                            </td>
                        </tr>
                        
                        <tr>
                            <td class="mb-2">
                               book price :-
                            </td>
                            <td>
                                <input type="text" placeholder="enter the book price" class="mb-2" name="price" value="<%=user.price%>"><br>
                            </td>
                            <br>
                        </tr>
                        <tr>
                            <td class="mb-2">
                               book pages :-
                            </td>
                            <td>
                                <select name="page" id="" class="mb-2">
                                    <% let page =["100-200","200-300","300-400","400-500","500-600","600-700","700-800","800-900"]%>
                                    <%  for(let i in page){ %> 
                                        <option 

                                        <%if(user.page == page[i]){ %> 
                                            selected <%}%> 
                                             value="<%= page[i] %>">
                    
                                            <%= page[i]%>
                                        </option>
                                    <% }%>
                                </select><br>
                            </td>
                        </tr>
                        <tr>
                            <td class="mb-2">
                               book authore :-
                            </td>
                            <td>
                                <input type="text" placeholder="enter the book authore" class="mb-2" name="authore" value="<%=user.authore%>"><br>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                img
                            </td>
                            <td>
                                <input type="file" name="avtar">
                            </td>
                        </tr>
                        
                        <tr>
                            <td class="mb-2">
                               
                            </td>
                            <td>
                               <% if(user){ %>
                                    <input type="submit"  class="mb-2" name="edit" value="edit"><br> 
                               <% } else{%>
                               
                                    <input type="submit"  class="mb-2" name="submit"><br>
                                <% }%>
                            </td>
                        </tr>
                    </table>
    
                </form>
            </div>
        </div>
    </section>  
    <section>
        <div class="container">
            <div class="row">
                <table style="color:darkblue">
                    <th>
                        id
                    </th>
                    <th>
                       book name
                    </th>
                    <th>
                       book price
                    </th>
                    <th>
                        book pages
                    </th>
                    <th>
                        book authore
                    </th>
                    <th>
                        imges
                    </th>
                    <th>
                        action
                    </th>
                    <th>
                        action
                    </th>
                    <tbody>
                        <% rec.map((val,i)=>{ %>
                            <% const{id,name,price,page,authore,avtar}=val 
                            i++;
                            %>
                            <tr>
                                <td><%=i%></td>
                                <td><%=name%></td>
                                <td><%=price%></td>
                                <td><%=page%></td>
                                <td><%=authore%></td>
                                <td><img src="<%=avtar%>" alt="pic" width="100"></td>
                                <td>
                                    <a href="/deletdata/<%= id %>">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                                <td>
                                    <a href="/editdata/<%= id %>">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                </td>
                            </tr>
                       <% })%>
                    </tbody>
                </table>
            </div>
        </div>
    </section>

</body>


